<head>
  <title>{{title}} - Lockdown Apps</title>
  
	<meta charset="utf-8">
  
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
  {{#if description }}
  <meta name="description" content="{{description}}">
  {{else}}
  <meta name="description" content="The simple, powerful firewall that blocks tracking, ads, badware and more.">
  {{/if}}
  {{#if author }}
  <meta name="author" content="{{author}}">
  {{else}}
  <meta name="author" content="Lockdown Apps">
  {{/if}}

	<meta property="og:type" content="product">
  {{#if title }}
	<meta property="og:title" content="{{title}} - Lockdown Apps">
  {{ else }}
  <meta property="og:title" content="Lockdown Apps">
  {{/if}}
  {{#if description }}
	<meta property="og:description" content="{{description}}">
  {{ else }}
	<meta property="og:description" content="The simple, powerful firewall that blocks tracking, ads, badware and more.">
  {{/if}}
	<meta property="og:url" content="https://lockdownhq.com">
  {{#if metaimg }}
	<meta property="og:image" content="{{metaimg}}">
  {{ else }}
	<meta property="og:image" content="{{S3_BUCKET}}/images/preview.jpg">
  {{/if}}
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@lockdown_hq">
  <meta name="twitter:creator" content="@lockdown_hq">
  {{#if title }}
	<meta property="twitter:title" content="{{title}} - Lockdown Apps">
  {{ else }}
  <meta property="twitter:title" content="Lockdown Apps">
  {{/if}}
  {{#if description }}
	<meta property="twitter:description" content="{{description}}">
  {{ else }}
	<meta property="twitter:description" content="The simple, powerful firewall that blocks tracking, ads, badware and more.">
  {{/if}}
  {{#if metaimg }}
	<meta property="twitter:image" content="{{metaimg}}">
  {{ else }}
	<meta property="twitter:image" content="{{S3_BUCKET}}/images/preview.jpg">
  {{/if}}
  
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

  <link rel="stylesheet" type="text/css" href="{{S3_BUCKET}}/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="{{S3_BUCKET}}/css/lockdown.css">
  <link rel="stylesheet" type="text/css" href="{{S3_BUCKET}}/css/font-awesome.min.css">
  
</head>